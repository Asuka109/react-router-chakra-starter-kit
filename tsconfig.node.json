{
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "react-router.config.ts",
    "./app/utils/environment.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.node.tsbuildinfo",
    "composite": true,
    "strict": true,
    "types": ["node", "vite/client"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler"
  }
}
